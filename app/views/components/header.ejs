<!--Simple container for the header content-->
<!--Bootstrap nav bar-->
<!--Boostrap styles for the navbar--> 



<!--expand the header content when the page is big; hides into toggle format when page is small, sets navbar sets the navbar coloration as dark(so turns the text white) and text to uppercase-->
<!--Personal background-color change as well-->
<nav class="navbar navbar-expand-lg navbar-dark text-uppercase" style="background-color: lightslategray; box-shadow: 2px 2px 2px;">
    <!--Bootstrap sets the header content to resizze when the page grows or shrinks-->
    <div class="container-fluid">

      <!--Bootstrap styling to control how the nav is displayed normally or when page resizes (toggle)-->
      <a class="navbar-brand" href="/"><i class="fa-solid  fa-lg"></i><!--Icon I made (mouse)--><img src="/content/images/MouseLogoSide.png" alt="mouse logo" width="20%"> COMP229</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!--Bootstrap nav styles for aligning items-->
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <!--Bootsrap class nav-item sets items as nav items and nav-link acts as link to various pages and sets active page icon color darker than the rest-->

          <li class="nav-item">
            <!--Boostrap link to home page-->
            <a class="nav-link <%= (page == 'home') ? 'active' : ''; %>" aria-current="page" href="/home"><i class="fa-solid fa-house-signal fa-lg"></i> Home </a>
          </li>
          <li class="nav-item">
            <!--Boostrap link to about page-->
            <a class="nav-link <%= (page == 'about') ? 'active' : ''; %>" aria-current="page" href="/about"><i class="fa-solid fa-circle-info fa-lg"></i> About </a>
          </li>
          <li class="nav-item">
            <!--Boostrap link to projects page-->
            <a class="nav-link <%= (page == 'projects') ? 'active' : ''; %>" aria-current="page" href="/projects"><i class="fa-solid fa-diagram-project fa-lg"></i> Projects </a>
          </li>
          <li class="nav-item">
            <!--Boostrap link to services page-->
            <a class="nav-link <%= (page == 'services') ? 'active' : ''; %>" aria-current="page" href="/services"><i class="fa-solid fa-signs-post fa-lg"></i> Services </a>
          </li>
          <li class="nav-item">
            <!--Boostrap link to contact page-->
            <a class="nav-link <%= (page == 'contact') ? 'active' : ''; %>" aria-current="page" href="/contact"><i class="fa-solid fa-envelopes-bulk fa-lg"></i> Contact </a>
          </li>
          <li> 
            <!--Boostrap link to business contacts page-->
            <a class="nav-link <%= (page == 'business-contacts') ? 'active' : ''; %>" aria-current="page" href="/business-contacts"><i class="fa-solid fa-briefcase fa-lg"></i> Business Contacts </a>
          </li> 
          <% if(displayName) { %>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/logout"><i class="fa-solid fa-right-from-bracket fa-lg"></i> Logout</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link <%= (page == 'login') ? 'active' : ''; %>" aria-current="page" href="/login"><i class="fa-solid fa-right-to-bracket fa-lg"></i> Login</a>
              </li>
            <% } %>
          
        </ul>
      </div>
    </div>
  </nav>