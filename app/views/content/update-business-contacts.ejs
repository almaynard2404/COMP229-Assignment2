<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= businessContact._id %>" >
                <div class="form-group">
                    <label for="contactNameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Contact Name"
                    name="contactName" 
                    value="<%= businessContact.contactName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactNumberTextField"
                    placeholder="Contact Number"
                    name="contactNumber" 
                    value="<%= businessContact.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact Email</label>
                    <input type="text" class="form-control"
                    id="contactEmailTextField"
                    placeholder="Contact Email"
                    name="contactEmail" 
                    value="<%= businessContact.email %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/movie-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>